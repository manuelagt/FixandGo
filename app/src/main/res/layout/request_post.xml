<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/placeCard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">


        <TextView
            android:id="@+id/request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/request_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/request_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:text="@string/request_description"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/user_1" />

        <TextView
            android:id="@+id/request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="140dp"
            android:text="@string/request_name"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="parent" />
        <TextView
            android:id="@+id/request_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="170dp"
            android:text="@string/request_email"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:text="31/10/2017"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="250dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/darker_gray"/>




    </android.support.v7.widget.CardView>
</RelativeLayout>
